<NetworkConfiguration xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schemas.microsoft.com/ServiceHosting/2011/07/NetworkConfiguration">
  <VirtualNetworkConfiguration>
    <Dns>
      <DnsServers>
        <DnsServer name="DNS01" IPAddress="172.16.0.5" />
        <DnsServer name="DNS02" IPAddress="10.0.0.5" />
      </DnsServers>
    </Dns>
    <LocalNetworkSites>
      <LocalNetworkSite name="Client-LocalSite-01">
        <AddressSpace>
          <AddressPrefix>10.50.0.0/16</AddressPrefix>
          <AddressPrefix>10.222.0.0/16</AddressPrefix>
          <AddressPrefix>172.25.0.0/16</AddressPrefix>
          <AddressPrefix>10.250.99.0/24</AddressPrefix>
          <AddressPrefix>192.168.50.0/24</AddressPrefix>
          <AddressPrefix>192.168.60.0/24</AddressPrefix>
          <AddressPrefix>10.60.0.0/16</AddressPrefix>
          <AddressPrefix>172.28.0.0/16</AddressPrefix>
          <AddressPrefix>172.26.0.0/16</AddressPrefix>
        </AddressSpace>
        <VPNGatewayAddress>11.22.33.44</VPNGatewayAddress>
      </LocalNetworkSite>
    </LocalNetworkSites>
    <VirtualNetworkSites>
      <VirtualNetworkSite name="Client-VNet-01" Location="North Central US">
        <AddressSpace>
          <AddressPrefix>10.55.30.0/24</AddressPrefix>
        </AddressSpace>
        <Subnets>
          <Subnet name="Client-Subnet-01">
            <AddressPrefix>10.0.30.0/25</AddressPrefix>
          </Subnet>
          <Subnet name="GatewaySubnet">
            <AddressPrefix>10.0.30.248/29</AddressPrefix>
          </Subnet>
        </Subnets>
        <DnsServersRef>
          <DnsServerRef name="DNS01" />
          <DnsServerRef name="DNS02" />
        </DnsServersRef>
        <Gateway>
          <ConnectionsToLocalNetwork>
            <LocalNetworkSiteRef name="Client-LocalSite-01">
              <Connection type="IPsec" />
			  <Policy name ="Route" />
            </LocalNetworkSiteRef>
          </ConnectionsToLocalNetwork>
        </Gateway>
      </VirtualNetworkSite>
    </VirtualNetworkSites>
  </VirtualNetworkConfiguration>
</NetworkConfiguration>